deps=(nettle libtasn1 p11-kit)
pkgname=gnutls
pkgver=3.4.9
src="ftp://ftp.gnutls.org/gcrypt/gnutls/v3.4/gnutls-3.4.9.tar.xz"
website=
diskusage=
buildtime=
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr --with-default-trust-store-file=/etc/ssl/ca-bundle.crt
make
}

function pkginstall {
make DESTDIR=$installdir install
make -C doc/reference DESTDIR=$installdir install-data-local
}

function pkgafterinstall {
cd $pkgdir/$pkgname-$pkgver
}

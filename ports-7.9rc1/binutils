deps=()
pkgname=binutils
pkgver=2.26
src="http://ftp.gnu.org/gnu/binutils/binutils-2.26.tar.bz2"
patchsrc="http://www.linuxfromscratch.org/patches/lfs/7.9-rc1/binutils-2.26-upstream_fix-1.patch"
website="http://www.gnu.org/software/binutils/"
diskusage="447 MB"
buildtime="2.3 SBU"
function pkgfetch {
    if [ ! -f "/usr/src/"$(basename $src) ]; then
        wget $src -O /usr/src/$(basename $src)
    fi
    if [ ! -f "/usr/src/$(basename $patchsrc)"; then
        wget $patchsrc -O /usr/src/$(basename $patchsrc)
    fi
    cp /usr/src/$(basename $patchsrc) $pkgdir
    tar -xf /usr/src/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
patch -Np1 -i ../binutils-2.26-upstream_fix-1.patch
mkdir -v build
cd build
../configure --prefix=/usr --enable-shared --disable-werror
make tooldir=/usr
}

function pkginstall {
cd $pkgdir/$pkgname-$pkgver
make DESTDIR=$installdir tooldir=/usr install
}

function pkgafterinstall {
cd $installdir
}

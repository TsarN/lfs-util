deps=()
pkgname=eudev
pkgver=3.1.5
src="http://dev.gentoo.org/~blueness/eudev/eudev-3.1.5.tar.gz"
udevsrc="http://anduin.linuxfromscratch.org/LFS/udev-lfs-20140408.tar.bz2"
website=""
diskusage="82 MB"
buildtime="0.3 SBU"
function pkgfetch {
    if [ ! -f "/usr/src/"$(basename $src) ]; then
        wget $src -O /usr/src/$(basename $src)
    fi
    tar -xf /usr/src/$(basename $src) -C $pkgdir
    if [ ! -f "/usr/src/"$(basename $udevsrc) ]; then
        wget $src -O /usr/src/$(basename $udevsrc)
    fi
    tar -xf /usr/src/$(basename $udevsrc) -C $pkgdir/$pkgname-$pkgver
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
sed -r -i 's|/usr(/bin/test)|1|' test/udev-test.pl
cat > config.cache << "EOF"
HAVE_BLKID=1
BLKID_LIBS="-lblkid"
BLKID_CFLAGS="-I/tools/include"
EOF
./configure --prefix=/usr --bindir=/sbin --sbindir=/sbin --libdir=/usr/lib --sysconfdir=/etc --libexecdir=/lib --with-rootprefix= --with-rootlibdir=/lib --enable-manpages --disable-static --config-cache
LIBRARY_PATH=/tools/lib make
}

function pkginstall {
cd $pkgdir/$pkgname-$pkgver
make DESTDIR=$installdir LD_LIBRARY_PATH=/tools/lib install
make -f udev-lfs-20140408/Makefile.lfs DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

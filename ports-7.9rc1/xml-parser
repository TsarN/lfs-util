deps=()
pkgname=xml-parser
tarballname=XML-Parser
pkgver=2.44
src="http://cpan.metacpan.org/authors/id/T/TO/TODDR/XML-Parser-2.44.tar.gz"
website="https://github.com/chorny/XML-Parser"
diskusage="2.0 MB"
buildtime="less than 0.1 SBU"
function pkgfetch {
    if [ ! -f "/usr/src/"$(basename $src) ]; then
        wget $src -O /usr/src/$(basename $src)
    fi
    tar -xf /usr/src/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$tarballname-$pkgver
perl Makefile.PL
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

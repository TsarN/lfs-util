deps=()
pkgname=shadow
pkgver=4.2.1
src="http://pkg-shadow.alioth.debian.org/releases/shadow-4.2.1.tar.xz"
website="http://pkg-shadow.alioth.debian.org/"
diskusage="42 MB"
buildtime="0.2 SBU"
function pkgfetch {
    if [ ! -f "/usr/src/"$(basename $src) ]; then
        wget $src -O /usr/src/$(basename $src)
    fi
    tar -xf /usr/src/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
sed -i 's/groups$(EXEEXT) //' src/Makefile.in
find man -name Makefile.in -exec sed -i 's/groups.1 / /' {} ;
sed -i -e 's@#ENCRYPT_METHOD DES@ENCRYPT_METHOD SHA512@' -e 's@/var/spool/mail@/var/mail@' etc/login.defs
sed -i 's/1000/999/' etc/useradd
./configure --sysconfdir=/etc --with-group-name-max-length=32
make
}

function pkginstall {
mkdir -pv $installdir/{,s}bin $installdir/usr/{,s}bin
make DESTDIR=$installdir install
mv -v $installdir/usr/bin/passwd $installdir/bin
mv -v $installdir/lib/libshadow.*a $installdir/usr/lib
rm -v $installdir/lib/libshadow.so
ln -sfv $installdir/lib/libshadow.so.0 $installdir/usr/lib/libshadow.so
}

function pkgafterinstall {
cd $installdir
}

deps=()
pkgname=iproute2
pkgver=4.4.0
src="https://www.kernel.org/pub/linux/utils/net/iproute2/iproute2-4.4.0.tar.xz"
website="https://www.kernel.org/pub/linux/utils/net/iproute2/"
diskusage="9.4 MB"
buildtime="0.2 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
sed -i /ARPD/d Makefile
sed -i 's/arpd.8//' man/man8/Makefile
rm -v doc/arpd.sgml
make
}

function pkginstall {
make DESTDIR=$installdir DOCDIR=/usr/share/doc/iproute2-4.4.0; install
}

function pkgafterinstall {
cd $installdir
}

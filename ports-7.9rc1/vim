deps=()
pkgname=vim
pkgver=7.4
src="ftp://ftp.vim.org/pub/vim/unix/vim-7.4.tar.bz2"
website="http://www.vim.org"
diskusage="111 MB"
buildtime="1.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
echo '#define SYS_VIMRC_FILE "/etc/vimrc"' >> src/feature.h
./configure --prefix=/usr
make
}

function pkginstall {
make DESTDIR=$installdir install
ln -sv vim $installdir/usr/bin/vi
for L in $installdir/usr/share/man/{,*/}man1/vim.1; do
ln -sv vim.1 $(dirname $L)/vi.1
done
ln -sv ../vim/vim74/doc $installdir/usr/share/doc/vim-7.4
}

function pkgafterinstall {
cd $installdir
}

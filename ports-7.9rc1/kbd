deps=()
pkgname=kbd
pkgver=2.0.3
src="https://www.kernel.org/pub/linux/utils/kbd/kbd-2.0.3.tar.xz"
patchsrc="http://www.linuxfromscratch.org/patches/lfs/7.9-rc1/kbd-2.0.3-backspace-1.patch"
website="http://ftp.altlinux.org/pub/people/legion/kbd"
diskusage="30 MB"
buildtime="0.2 SBU"
function pkgfetch {
    if [ ! -f "/usr/src/"$(basename $src) ]; then
        wget $src -O /usr/src/$(basename $src)
    fi
    if [ -f "/usr/src/"$(basename $patchsrc) ]; then
        wget $patchsrc -O /usr/src/$(basename $patchsrc)
    fi
    cp /usr/src/$(basename $patchsrc) $pkgdir
    tar -xf /usr/src/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
patch -Np1 -i ../kbd-2.0.3-backspace-1.patch
sed -i 's/(RESIZECONS_PROGS=)yes/1no/g' configure
sed -i 's/resizecons.8 //' docs/man/man8/Makefile.in
PKG_CONFIG_PATH=/tools/lib/pkgconfig ./configure --prefix=/usr --disable-vlock
make
}

function pkginstall {
cd $pkgdir/$pkgname-$pkgver
mkdir -pv $installdir/{,s}bin $installdir/usr/{,s}bin
make DESTDIR=$installdir install
mv -v $installdir/usr/bin/{kbd_mode,loadkeys,openvt,setfont} $installdir/bin
mkdir -v $installdir/usr/share/doc/kbd-2.0.3
cp -R -v docs/doc/* $installdir/usr/share/doc/kbd-2.0.3
}

function pkgafterinstall {
cd $installdir
}

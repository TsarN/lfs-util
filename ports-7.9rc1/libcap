deps=()
pkgname=libcap
pkgver=2.25
src="https://www.kernel.org/pub/linux/libs/security/linux-privs/libcap2/libcap-2.25.tar.xz"
website="https://sites.google.com/site/fullycapable/"
diskusage="1.4 MB"
buildtime="less than 0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
sed -i '/install.*STALIBNAME/d' libcap/Makefile
make
}

function pkginstall {
mkdir -pv $installdir/lib
make DESTDIR=$installdir RAISE_SETFCAP=no prefix=/usr install
chmod -v 755 /usr/lib/libcap.so
mv -v $installdir/usr/lib/libcap.so.* $installdir/lib
ln -sfv $installdir/lib/$(readlink $installdir/usr/lib/libcap.so) $installdir/usr/lib/libcap.so
}

function pkgafterinstall {
cd $installdir
}

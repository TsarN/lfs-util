deps=()
pkgname=patch
pkgver=2.7.5
src="http://ftp.gnu.org/gnu/patch/patch-2.7.5.tar.xz"
website="http://savannah.gnu.org/projects/patch/"
diskusage="11.3 MB"
buildtime="0.2 SBU"
function pkgfetch {
    if [ ! -f "/usr/src/"$(basename $src) ]; then
        wget $src -O /usr/src/$(basename $src)
    fi
    tar -xf /usr/src/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

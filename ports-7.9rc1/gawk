deps=()
pkgname=gawk
pkgver=4.1.3
src="http://ftp.gnu.org/gnu/gawk/gawk-4.1.3.tar.xz"
website="http://www.gnu.org/software/gawk/"
diskusage="36 MB"
buildtime="0.3 SBU"
function pkgfetch {
    if [ ! -f "/usr/src/"$(basename $src) ]; then
        wget $src -O /usr/src/$(basename $src)
    fi
    tar -xf /usr/src/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr
make
}

function pkginstall {
cd $pkgdir/$pkgname-$pkgver
make DESTDIR=$installdir install
mkdir -v $installdir/usr/share/doc/gawk-4.1.3
cp -v doc/{awkforai.txt,*.{eps,pdf,jpg}} $installdir/usr/share/doc/gawk-4.1.3
}

function pkgafterinstall {
cd $installdir
}

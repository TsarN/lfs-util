deps=()
pkgname=attr
pkgver=2.4.47
src="http://download.savannah.gnu.org/releases/attr/attr-2.4.47.src.tar.gz"
website="http://www.gnu.org/software/attr/"
diskusage="3.4 MB"
buildtime="less than 0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
sed -i -e 's|/@pkg_name@|&-@pkg_version@|' include/builddefs.in
sed -i -e "/SUBDIRS/s|man2||" man/Makefile
./configure --prefix=/usr --bindir=/bin --disable-static
make
}

function pkginstall {
mkdir -pv /lib
mkdir -pv /bin
make DESTDIR=$installdir install install-dev install-lib
chmod -v 755 /usr/lib/libattr.so
mv -v $installdir/usr/lib/libattr.so.* $installdir/lib
ln -sfv $installdir/lib/$(readlink $installdir/usr/lib/libacl.so) $installdir/usr/lib/libacl.so
}

function pkgafterinstall {
cd $installdir
}

deps=()
pkgname=groff
pkgver=1.22.3
src="http://ftp.gnu.org/gnu/groff/groff-1.22.3.tar.gz"
website="http://www.gnu.org/software/groff/"
diskusage="84 MB"
buildtime="0.5 SBU"
function pkgfetch {
    if [ ! -f "/usr/src/"$(basename $src) ]; then
        wget $src -O /usr/src/$(basename $src)
    fi
    tar -xf /usr/src/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
PAGE=A4 ./configure --prefix=/usr
make
}

function pkginstall {
cd $pkgdir/$pkgname-$pkgver
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

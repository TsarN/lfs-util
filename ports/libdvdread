deps=()
pkgname=libdvdread
pkgver=5.0.3
src=("http://download.videolan.org/videolan/libdvdread/5.0.3/libdvdread-5.0.3.tar.bz2")
website=
diskusage="3.9 MB"
buildtime="less than 0.1 SBU"

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr --disable-static \
            --docdir=/usr/share/doc/libdvdread-5.0.3
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

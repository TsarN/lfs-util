deps=(glib)
pkgname=vala
pkgver=0.28.1
src="http://ftp.gnome.org/pub/gnome/sources/vala/0.28/vala-0.28.1.tar.xz"
website=
diskusage="170 MB (including tests)"
buildtime="0.9 MB (including tests)"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

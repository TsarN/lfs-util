deps=(consolekit2 lxde-icon-theme lxpanel lxsession openbox pcmanfm desktop-file-utils hicolor-icon-theme shared-mime-info dbus)
pkgname=lxde-common
pkgver=0.99.1
src="http://downloads.sourceforge.net/lxde/lxde-common-0.99.1.tar.xz"
website=
diskusage="2.8 MB"
buildtime="less than 0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr --sysconfdir=/etc
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
update-mime-database /usr/share/mime &&
gtk-update-icon-cache -qf /usr/share/icons/hicolor &&
update-desktop-database -q
}

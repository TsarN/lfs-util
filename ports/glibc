deps=()
pkgname=glibc
pkgver=2.23
src="http://ftp.gnu.org/gnu/glibc/glibc-2.23.tar.xz"
patchsrc="http://www.linuxfromscratch.org/patches/lfs/7.9-rc2/glibc-2.23-fhs-1.patch"
website="http://www.gnu.org/software/libc/"
diskusage="1.1 GB"
buildtime="17.4 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    echo "patch ${sourcedir}/$(basename $patchsrc)"
    if [ ! -f "${sourcedir}/"$(basename $patchsrc) ]; then
        wget $patchsrc -O ${sourcedir}/$(basename $patchsrc)
    fi
    cp ${sourcedir}/$(basename $patchsrc) $pkgdir
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
patch -Np1 -i ../glibc-2.23-fhs-1.patch
mkdir -v build
cd build
../configure --prefix=/usr --disable-profile --enable-kernel=2.6.32 --enable-obsolete-rpc
make
}

function pkginstall {
mkdir -pv $installdir/etc
touch $installdir/etc/ld.so.conf
make DESTDIR=$installdir install
cp -v ../nscd/nscd.conf $installdir/etc/nscd.conf
mkdir -pv $installdir/var/cache/nscd
}

function pkgafterinstall {
cd $installdir
}

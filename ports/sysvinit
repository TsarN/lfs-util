deps=()
pkgname=sysvinit
pkgver=2.88dsf
src="http://download.savannah.gnu.org/releases/sysvinit/sysvinit-2.88dsf.tar.bz2"
patchsrc="http://www.linuxfromscratch.org/patches/lfs/7.9-rc1/sysvinit-2.88dsf-consolidated-1.patch"
website="http://savannah.nongnu.org/projects/sysvinit"
diskusage="1.1 MB"
buildtime="less than 0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    if [ ! -f "${sourcedir}/"$(basename $patchsrc) ]; then
        wget $patchsrc -O ${sourcedir}/$(basename $patchsrc)
    fi
    cp ${sourcedir}/$(basename $patchsrc) $pkgdir
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
sed -i 's@Sending processes@& configured via /etc/inittab@g' src/init.c
sed -ri -e '/utmpdump/d' -e '/mountpoint/d' -e '/mesg/d' -e 's/= sulogin(.8)?/=/' src/Makefile
#patch -Np1 -i ../sysvinit-2.88dsf-consolidated-1.patch
make -C src
}

function pkginstall {
make DESTDIR=$installdir -C src install
}

function pkgafterinstall {
cd $installdir
}

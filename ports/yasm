deps=()
pkgname=yasm
pkgver=1.3.0
src="http://www.tortall.net/projects/yasm/releases/yasm-1.3.0.tar.gz"
website=
diskusage="27 MB (additional 12 MB for the tests)"
buildtime="0.1 SBU (additional 0.1 SBU for the tests) "
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
sed -i 's#) ytasm.*#)#' Makefile.in
./configure --prefix=/usr
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

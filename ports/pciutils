deps=()
pkgname=pciutils
pkgver=3.4.1
src="https://ftp.kernel.org/pub/software/utils/pciutils/pciutils-3.4.1.tar.xz"
website=
diskusage="3.3 MB"
buildtime="less than 0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src) --no-check-certificate
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
make PREFIX=/usr                \
     SHAREDIR=/usr/share/hwdata \
     SHARED=yes
}

function pkginstall {
make DESTDIR=$installdir        \
     PREFIX=/usr                \
     SHAREDIR=/usr/share/hwdata \
     SHARED=yes                 \
     install install-lib        &&

chmod -v 755 $installdir/usr/lib/libpci.so

}

function pkgafterinstall {
cd $installdir
}

deps=(freetype fribidi fontconfig)
pkgname=libass
pkgver=0.13.1
src="https://github.com/libass/libass/releases/download/0.13.1/libass-0.13.1.tar.xz"
website=
diskusage="6.2 MB"
buildtime="0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr --disable-static
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

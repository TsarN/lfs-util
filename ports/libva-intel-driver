deps=(libva wayland)
pkgname=libva-intel-driver
pkgver=1.7.0
src=("http://www.freedesktop.org/software/vaapi/releases/libva-intel-driver/${pkgname}-${pkgver}.tar.bz2")
website=
diskusage="16 MB"
buildtime="0.2 SBU"

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure $XORG_CONFIG
make
}

function pkginstall {
cd $pkgdir/$pkgname-$pkgver
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

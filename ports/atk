deps=(glib gobject-introspection)
pkgname=atk
pkgver=2.18.0
src="http://ftp.gnome.org/pub/gnome/sources/atk/2.18/atk-2.18.0.tar.xz"
website=
diskusage="16 MB"
buildtime="0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

deps=(xmlto links xorg-applications dbus)
pkgname=xdg-utils
pkgver=1.1.1
src="http://portland.freedesktop.org/download/xdg-utils-1.1.1.tar.gz"
website=
diskusage="3.5 MB (with tests)"
buildtime="0.3 SBU (with tests)"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
sed -i "s/4\.1\.2/4\.5/g" scripts/desc/*
./configure --prefix=/usr --mandir=/usr/share/man
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

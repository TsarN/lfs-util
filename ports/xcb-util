deps=(libxcb)
pkgname=xcb-util
pkgver=0.4.0
src="http://xcb.freedesktop.org/dist/xcb-util-0.4.0.tar.bz2"
website=
diskusage="2.6 MB"
buildtime="0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure $XORG_CONFIG
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

deps=()
pkgname=libarchive
pkgver=3.1.2
src="http://www.libarchive.org/downloads/libarchive-3.1.2.tar.gz"
patchsrc="http://www.linuxfromscratch.org/patches/blfs/svn/libarchive-3.1.2-upstream_fixes-1.patch"
website=
diskusage="60 MB"
buildtime="0.5 SBU"
function pkgfetch {
if [ ! -f "${sourcedir}/"$(basename $src) ]; then
    wget $src -O ${sourcedir}/$(basename $src)
fi
tar -xf ${sourcedir}/$(basename $src) -C $pkgdir

if [ ! -f "${sourcedir}/"$(basename $patchsrc) ]; then
    wget $patchsrc -O ${sourcedir}/$(basename $patchsrc)
fi
cp -v ${sourcedir}/$(basename $patchsrc) $pkgdir/
}

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
patch -Np1 -i ../libarchive-3.1.2-upstream_fixes-1.patch
./configure --prefix=/usr --disable-static
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

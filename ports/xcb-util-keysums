deps=(libxcb)
pkgname=xcb-util-keysums
pkgver=0.4.0
src="http://xcb.freedesktop.org/dist/xcb-util-keysyms-0.4.0.tar.bz2"
website=
diskusage="2.2 MB"
buildtime="less than 0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/xcb-util-keysyms-$pkgver # Why? 
./configure $XORG_CONFIG
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

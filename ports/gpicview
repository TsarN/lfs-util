deps=(gtk2)
pkgname=gpicview
pkgver=0.2.5
src="http://downloads.sourceforge.net/lxde/gpicview-0.2.5.tar.xz"
website=
diskusage="6.5 MB"
buildtime="less than 0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr
make
}

function pkginstall {
make DESTDIR=$installdir install
sed -i 's/Utility;//' $installdir/usr/share/applications/gpicview.desktop
}

function pkgafterinstall {
xdg-icon-resource forceupdate --theme hicolor
}

deps=(xorg-libraries twm xclock xterm)
pkgname=xinit
pkgver=1.3.4
src="http://ftp.x.org/pub/individual/app/xinit-1.3.4.tar.bz2"
website=
diskusage="1.9 MB"
buildtime="0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
sed -e '/$serverargs $vtarg/ s/serverargs/: #&/' \
    -i startx.cpp
./configure $XORG_CONFIG \
            --with-xinitdir=/etc/X11/app-defaults &&
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
ldconfig
}

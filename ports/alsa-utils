deps=(alsa-lib)
pkgname=alsa-utils
pkgver=1.1.0
src="ftp://ftp.alsa-project.org/pub/utils/alsa-utils-1.1.0.tar.bz2"
website=
diskusage="9.3 MB"
buildtime="0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --disable-alsaconf \
--disable-bat   \
--disable-xmlto \
--with-curses=ncursesw
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

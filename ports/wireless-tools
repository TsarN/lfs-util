deps=()
pkgname=wireless-tools
pkgver=29
src="http://hpl.hp.com/personal/Jean_Tourrilhes/Linux/wireless_tools.29.tar.gz"
website=
diskusage="2.0 MB"
buildtime="less than 0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/wireless_tools.$pkgver
make
}

function pkginstall {
make PREFIX=$installdir/usr INSTALL_MAN=$installdir/usr/share/man install
}

function pkgafterinstall {
cd $installdir
}

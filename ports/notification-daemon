deps=(gtk3 libcanberra)
pkgname=notification-daemon
pkgver=3.18.1
src="http://ftp.gnome.org/pub/gnome/sources/notification-daemon/3.18/notification-daemon-3.18.1.tar.xz"
website=
diskusage="5 MB"
buildtime="less than 0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr --sysconfdir=/etc --disable-static
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

deps=(python2)
pkgname=scons
pkgver=2.4.1
src="http://downloads.sourceforge.net/scons/scons-2.4.1.tar.gz"
website=
diskusage=
buildtime=
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
}

function pkginstall {
python setup.py install --prefix="$installdir/usr"  \
--standard-lib \
--optimize=1   \
--install-data="$installdir/usr/share"
}

function pkgafterinstall {
cd $installdir
}

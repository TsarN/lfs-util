deps=(curl libarchive)
pkgname=cmake
pkgver=3.4.3
src="http://www.cmake.org/files/v3.4/cmake-3.4.3.tar.gz"
website=
diskusage="704 MB (with tests and cmake-gui)"
buildtime="4 SBU, with parallelism = 4 (with tests and cmake-gui)"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./bootstrap --prefix=/usr       \
--system-libs       \
--mandir=/share/man \
--no-system-jsoncpp \
--docdir=/share/doc/cmake-3.4.3 &&
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

deps=(dbus glib)
pkgname=dbus-glib
pkgver=0.106
src="http://dbus.freedesktop.org/releases/dbus-glib/dbus-glib-0.106.tar.gz"
website=
diskusage="12 MB (with tests)"
buildtime="0.1 SBU (with tests)"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr --sysconfdir=/etc --disable-static
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

deps=()
pkgname=acpid
pkgver=2.0.26
src=("http://downloads.sourceforge.net/acpid2/acpid-2.0.26.tar.xz")
website=
diskusage="2.4 MB"
buildtime="less than 0.1 SBU"

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr \
            --docdir=/usr/share/doc/acpid-2.0.26
make
}

function pkginstall {
make DESTDIR=$installdir install
install -v -m755 -d $installdir/etc/acpi/events
mkdir -p $installdir/usr/share/doc/acpid-2.0.26
cp -r samples $installdir/usr/share/doc/acpid-2.0.26
}

function pkgafterinstall {
cd $installdir
}

deps=(python3 python2)
pkgname=pyxdg
pkgver=0.25
src="http://people.freedesktop.org/~takluyver/pyxdg-0.25.tar.gz"
website=
diskusage="800 KB"
buildtime="less than 0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
}

function pkginstall {
python setup.py install --prefix=$installdir --optimize=1
python3 setup.py install --prefix=$installdir --optimize=1
}

function pkgafterinstall {
cd $installdir
}

deps=(glib py2cairo gobject-introspection)
pkgname=pygobject2
pkgver=2.28.6
src="http://ftp.gnome.org/pub/gnome/sources/pygobject/2.28/pygobject-2.28.6.tar.xz"
patchsrc="http://www.linuxfromscratch.org/patches/blfs/svn/pygobject-2.28.6-fixes-1.patch"
website=
diskusage="24 MB"
buildtime="0.2 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir

    if [ ! -f "${sourcedir}/"$(basename $patchsrc) ]; then
        wget $patchsrc -O ${sourcedir}/$(basename $patchsrc)
    fi
    cp -rv "${sourcedir}/$(basename $patchsrc)" "$pkgdir/"
    }

function pkgmake {
cd $pkgdir/pygobject-$pkgver
patch -Np1 -i ../pygobject-2.28.6-fixes-1.patch 
./configure --prefix=/usr
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

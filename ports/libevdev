deps=(python)
pkgname=libevdev
pkgver=1.4.6
src="http://www.freedesktop.org/software/libevdev/libevdev-1.4.6.tar.xz"
website=
diskusage="9 MB (with tests)"
buildtime="0.2 SBU (with tests)"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure $XORG_CONFIG
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

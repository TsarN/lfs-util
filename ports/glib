deps=(libffi python pcre)
pkgname=glib
pkgver=2.46.2
src="http://ftp.gnome.org/pub/gnome/sources/glib/2.46/glib-2.46.2.tar.xz"
website=
diskusage="187 MB (additional 74 MB for tests)"
buildtime="0.8 SBU (additional 3.3 SBU for tests)"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr --with-pcre=system
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
gross merge shared-mime-info desktop-file-utils
}

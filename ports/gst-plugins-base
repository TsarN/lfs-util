deps=(gstreamer alsa-lib gobject-introspection iso-codes libogg libtheora libvorbis xorg-libraries)
pkgname=gst-plugins-base
pkgver=1.6.3
src=("http://gstreamer.freedesktop.org/src/gst-plugins-base/gst-plugins-base-1.6.3.tar.xz")
website=
diskusage=
buildtime=

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr \
            --with-package-name="GStreamer Base Plugins 1.6.3 BLFS" \
            --with-package-origin="http://www.linuxfromscratch.org/blfs/view/svn/"
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

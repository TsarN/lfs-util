deps=(mesa)
pkgname=libva
pkgver=1.6.2
src="http://www.freedesktop.org/software/vaapi/releases/libva/libva-1.6.2.tar.bz2"
website=
diskusage="16 MB"
buildtime="0.2 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure $XORG_CONFIG
make
}

function pkginstall {
cd $pkgdir/$pkgname-$pkgver
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

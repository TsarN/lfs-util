deps=(libffi)
pkgname=wayland
pkgver=1.10.0
src="http://wayland.freedesktop.org/releases/wayland-1.10.0.tar.xz"
website=
diskusage="7.4 MB (plus 3.7 MB if tests are run) "
buildtime="0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr --disable-static --disable-documentation
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

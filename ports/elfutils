deps=()
pkgname=elfutils
pkgver=0.165
src="https://fedorahosted.org/releases/e/l/elfutils/0.165/elfutils-0.165.tar.bz2"
website=
diskusage="107 MB (with tests)"
buildtime="1 SBU (with tests)"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr --program-prefix="eu-"
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

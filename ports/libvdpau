deps=(xorg-libraries)
pkgname=libvdpau
pkgver=1.1.1
src="http://people.freedesktop.org/~aplattner/vdpau/libvdpau-1.1.1.tar.bz2"
website=
diskusage="9.3 MB (with tests)"
buildtime="less than 0.1 SBU (with tests)"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure $XORG_CONFIG --docdir=/usr/share/doc/libvdpau-1.1.1 &&
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

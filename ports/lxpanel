deps=(keybinder2 libwnck lxmenu-data menu-cache alsa-lib libxml2 wireless-tools)
pkgname=lxpanel
pkgver=0.8.2
src="http://downloads.sourceforge.net/lxde/lxpanel-0.8.2.tar.xz"
website=
diskusage="28 MB"
buildtime="0.3 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

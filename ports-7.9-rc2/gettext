deps=()
pkgname=gettext
pkgver=0.19.7
src="http://ftp.gnu.org/gnu/gettext/gettext-0.19.7.tar.xz"
website="http://www.gnu.org/software/gettext/"
diskusage="190 MB"
buildtime="7.8 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr --disable-static --docdir=/usr/share/doc/gettext-0.19.7
make
}

function pkginstall {
make DESTDIR=$installdir install
chmod -v 0755 $installdir/usr/lib/preloadable_libintl.so
}

function pkgafterinstall {
cd $installdir
}

deps=()
pkgname=sysklogd
pkgver=1.5.1
src="http://www.infodrom.org/projects/sysklogd/download/sysklogd-1.5.1.tar.gz"
website="http://www.infodrom.org/projects/sysklogd/"
diskusage="0.6 MB"
buildtime="less than 0.1 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
sed -i '/Error loading kernel symbols/{n;n;d}' ksym_mod.c
make
}

function pkginstall {
make DESTDIR=$installdir BINDIR=/sbin install
}

function pkgafterinstall {
cd $installdir
}

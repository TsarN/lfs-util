deps=()
pkgname=flex
pkgver=2.6.0
src="http://prdownloads.sourceforge.net/flex/flex-2.6.0.tar.xz"
website="http://flex.sourceforge.net"
diskusage="37 MB"
buildtime="0.4 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr --disable-static --docdir=/usr/share/doc/flex-2.6.0
make
}

function pkginstall {
make DESTDIR=$installdir install
ln -sv flex $installdir/usr/bin/lex
}

function pkgafterinstall {
cd $installdir
}

deps=()
pkgname=autoconf
pkgver=2.69
src="http://ftp.gnu.org/gnu/autoconf/autoconf-2.69.tar.xz"
website="http://www.gnu.org/software/autoconf/"
diskusage="17.3 MB"
buildtime="less than 0.1 SBU (about 4.7 SBU with tests)"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
./configure --prefix=/usr
make
}

function pkginstall {
make DESTDIR=$installdir install
}

function pkgafterinstall {
cd $installdir
}

deps=()
pkgname=mpfr
pkgver=3.1.3
src="http://www.mpfr.org/mpfr-3.1.3/mpfr-3.1.3.tar.xz"
patchsrc="http://www.linuxfromscratch.org/patches/lfs/7.9-rc2/mpfr-3.1.3-upstream_fixes-2.patch"
website="http://www.mpfr.org/"
diskusage="46 MB"
buildtime="0.8 SBU"
function pkgfetch {
    if [ ! -f "${sourcedir}/"$(basename $src) ]; then
        wget $src -O ${sourcedir}/$(basename $src)
    fi
    if [ ! -f "${sourcedir}/"$(basename $patchsrc) ]; then
        wget $patchsrc -O ${sourcedir}/$(basename $patchsrc)
    fi
    cp ${sourcedir}/$(basename $patchsrc) $pkgdir
    tar -xf ${sourcedir}/$(basename $src) -C $pkgdir
    }

function pkgmake {
cd $pkgdir/$pkgname-$pkgver
patch -Np1 -i ../mpfr-3.1.3-upstream_fixes-2.patch
./configure --prefix=/usr --disable-static --enable-thread-safe --docdir=/usr/share/doc/mpfr-3.1.3
make
make html
}

function pkginstall {
make DESTDIR=$installdir install
make DESTDIR=$installdir install-html
}

function pkgafterinstall {
cd $installdir
}
